<Window x:Class="TaskManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Top" Margin="5,5,5,0" Grid.ColumnSpan="2">
            <TextBlock HorizontalAlignment="Center" FontFamily="Helvetica" FontWeight="ExtraLight" FontSize="45" Margin="5">TaskManager</TextBlock>
            <Separator/>
            <TextBlock HorizontalAlignment="Center">User:</TextBlock>
            <TextBox Margin="5" Width="200" x:Name="tbxUser"></TextBox>
            <TextBlock HorizontalAlignment="Center">Password:</TextBlock>
            <PasswordBox Margin="5" Width="200" x:Name="pbxPassword"></PasswordBox>
        </StackPanel>
        <Button Click="Login_Click" Margin="5 5 5 20" Width="100" Height="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Content="Login"></Button>
    </Grid>
</Window>
