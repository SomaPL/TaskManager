<Window x:Class="TaskManager.Windows.UpdateTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager.Windows"
        mc:Ignorable="d"
        Title="Update task" Height="330" Width="400">
    <Border Padding="10">
        <Grid>
            <StackPanel>
                <TextBlock Text="Id:"></TextBlock>
                <TextBox x:Name="tbxId" IsEnabled="False"/>
                <TextBlock Text="Task name:"></TextBlock>
                <TextBox x:Name="tbxTaskName" MaxLength="100"></TextBox>
                <TextBlock Text="Status:"></TextBlock>
                <ComboBox x:Name="cmbStatus"></ComboBox>
                <Button Margin="0 10 0 0" Click="AddComment_Click" Content="Add comment"></Button>
                <TextBlock Text="Author:"></TextBlock>
                <TextBox x:Name="tbxAuthor" IsEnabled="False"></TextBox>
                <TextBlock Text="Created:"></TextBlock>
                <TextBox x:Name="tbxCreated" IsEnabled="False"></TextBox>
                <Button Margin="0 10 0 0" Click="Update_Click" Content="Update"></Button>
                <Button Margin="0 10 0 0" Click="Cancel_Click" Content="Cancel"></Button>
            </StackPanel>

        </Grid>
    </Border>
</Window>
