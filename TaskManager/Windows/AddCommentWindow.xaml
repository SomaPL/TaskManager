<Window x:Class="TaskManager.Windows.AddCommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager.Windows"
        mc:Ignorable="d"
        Title="Add comment" Height="450" Width="800">
    <Border Padding="10">
        <Grid>
            <TextBlock Text="You are adding comment to: "></TextBlock>
            <TextBox Margin="165 0 0 0" x:Name="tbxTaskName" Width="500" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" IsEnabled="False"></TextBox>
            <TextBlock Margin="680 0 0 0" Text="Id: "></TextBlock>
            <TextBox Margin="700 0 0 0" x:Name="tbxId" Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" IsEnabled="False"></TextBox>
            <TextBox MaxLength="500" x:Name="tbxContents" Margin="0 25 0 60"></TextBox>
            <Button Click="AddComment_Click" Margin="250 0 0 20" Width="125" Height="25" Content="Add comment" HorizontalAlignment="Left" VerticalAlignment="Bottom"></Button>
            <Button Click="Cancel_Click" Margin="0 0 250 20" Width="125" Height="25" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom"></Button>
        </Grid>
    </Border>
</Window>
